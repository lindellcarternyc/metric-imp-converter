{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es6", "dom"
    ],
    "strict": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules/**/*.ts",
    "lib",
    "__tests__"
  ]
}